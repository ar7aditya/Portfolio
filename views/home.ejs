<%- include("partials/header") -%>

<h1 class="title-heading">Blog Post</h1>


        <% posts.forEach(function(post) { %>
            <h1 class="blog-title"> <%= post.title %></h1> 
            <h6 class="date_time"> <%= post.date %></h6> 
            <div class="content-style">
            <h1><%= post.content.substring(0,1).toUpperCase()%></h1>
         <p><%= post.content.substring(1,100)+"..."%> 
         <a href="/posts/<%=post.title%>" + post.title> Read more</a> 
        </p>
    </div>
    <hr>
            <% }) %>
